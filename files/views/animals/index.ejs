<style>
    input[type=text], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
    button[type=submit] {
      width: 30%;
      background-color: #4CAF50;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    h1{
        color: #4CAF50;
        text-align: center;
    }
    div {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
    }
    </style>
<body>
  <div>
    <h1>-Ajouter un  Animal-</h1>
    <form  method="POST">
       <input type="text" name="type" placeholder="Type d'animal" <% if(keyUpdate!=null){%>value="<%=keyUpdate.type %>"<% }%>
       <label>Nom</label>
       <input type="text" name="nom" <% if(keyUpdate!=null){%>value="<%=keyUpdate.nom %>"<% }%> >
       <label>URL</label>
       <input type="text" name="url" placeholder="URL Image" <% if(keyUpdate!=null){%>value="<%=keyUpdate.url %>"<% }%>>
       <button type="submit">Send</button>
    </form>
   <div>
    <h2>Animals liste</h2>
    
<ul>
    
      <% for (let index in animals){%> 
    
            <li>
               <img src="<%=animals[index].url%>">
               <h2 ><%=animals[index].type%></h2>
               <p ><%=animals[index].nom%> </p>
               <button ><a href="/delete/<%=animals[index]._id%>">delete</a></button>
               <button><a href="/<%=animals[index]._id%>">edit</a></button>
            </li> 
     <%}%>
   
    </ul>
  
</div>
</div>
